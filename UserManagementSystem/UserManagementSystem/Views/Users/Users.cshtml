@model PagingList<Users>

@{
    ViewData["Title"] = "Users";
}

<nav class="navbar navbar-expand-lg navbar-light bg-light">
  <div class="container-fluid">
    <a class="navbar-brand" href="#">User Management System</a>
    <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarColor02" aria-controls="navbarColor02" aria-expanded="false" aria-label="Toggle navigation">
      <span class="navbar-toggler-icon"></span>
    </button>

    <div class="collapse navbar-collapse" id="navbarColor02">
      <ul class="navbar-nav me-auto">
        
      </ul>
      <form class="d-flex">
        @Html.TextBox("SearchString", ViewBag.CurrentFilter as string)
        <button class="btn btn-secondary my-2 my-sm-0" value="Search" type="submit">Search</button>
      </form>
    </div>
  </div>
</nav>
    <div class="row pt-4">
        <h3 class="text-primary">User List</h3>
    </div>
    <div class="col-2" style="float: right">
    <a asp-controller="Users" asp-action="Create" class="btn btn-dark">Create New User</a>
</div>

<table class="table table-hover">
    <thead>
        <tr>
            <th>
                @Html.ActionLink("First Name", "Users", new { sortOrder = ViewBag.FNSortParm, currentFilter=ViewBag.CurrentFilter })
            </th>
            <th>
                @Html.ActionLink("Last Name", "Users", new { sortOrder = ViewBag.LNSortParm, currentFilter=ViewBag.CurrentFilter })
            </th>
            <th>
                @Html.ActionLink("Username", "Users", new { sortOrder = ViewBag.USortParm, currentFilter=ViewBag.CurrentFilter })
            </th>
            <th>
                @Html.ActionLink("Password", "Users", new { sortOrder = ViewBag.PSortParm, currentFilter=ViewBag.CurrentFilter })
            </th>
            <th>
                @Html.ActionLink("Email", "Users", new { sortOrder = ViewBag.ESortParm, currentFilter=ViewBag.CurrentFilter })
            </th>
            <th>
                @Html.ActionLink("Status", "Users", new { sortOrder = ViewBag.SSortParm, currentFilter=ViewBag.CurrentFilter })
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.FirstName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.LastName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Username)
            </td>
            <td>
                <label>*****</label>
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Email)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Status)
            </td>
            <td style="text-align: right">
                <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-secondary btn-sm">Edit</a> 
                <a asp-action="Permissions" asp-route-id="@item.Id" class="btn btn-secondary btn-sm">Assign Permissions</a> 
                <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-danger btn-sm" onclick="return confirm('Are you sure you want to delete this user?')">Delete</a>
            </td>
        </tr>
}
    </tbody>
    </table>
    <br />
@{
        var prevDisabled = !Model.PreviousPage ? "disabled" : ""; 
        var nextDisabled = !Model.NextPage ? "disabled" : ""; 
    }
    <a asp-action="Users"
    asp-route-pageNumber="@(Model.PageIndex - 1)"
    class="btn btn-secondary btn-sm @prevDisabled">Previous</a>
    <a asp-action="Users"
    asp-route-pageNumber="@(Model.PageIndex + 1)"
    class="btn btn-secondary btn-sm @nextDisabled">Next</a>